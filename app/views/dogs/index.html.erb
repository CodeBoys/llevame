<h1>Listing dogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th>Particular signals</th>
      <th>Owner name</th>
      <th>Owner email</th>
      <th>Owner phone</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= dog.description %></td>
        <td><%= dog.particular_signals %></td>
        <td><%= dog.owner_name %></td>
        <td><%= dog.owner_email %></td>
        <td><%= dog.owner_phone %></td>
        <td><%= dog.lat %></td>
        <td><%= dog.lng %></td>
        <td><%= dog.breed %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

