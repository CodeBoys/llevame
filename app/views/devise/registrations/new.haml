.container
  .row
    .col-md-6
      %h3 Nuevo por aqui... registrate
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          Nombre:
          %br/
          = f.text_field :name, autofocus: true, class: "form-control"

        .field
          Telefono
          %br/
          = f.text_field :phone, autofocus: true, class: "form-control"

        .field
          Username
          %br/
          = f.text_field :username, class: "form-control"


        .field
          Correo Electronico
          %br/
          = f.email_field :email, placeholder: "ejemplo@ejemplo.com", class: "form-control"

        .field
          Contrase;a

          - if @validatable
            %em
              (#{@minimum_password_length} caracteres minimo)
          %br/
          = f.password_field :password, autocomplete: "off", class: "form-control"
        .field
          Confirma la contrase;a
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"

        .actions
          = f.submit "Listo!", class: "btn btn-info"
    .col-md-6
      %h3 Si ya tienes cuenta... Inicia sesion
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          Username
          %br/
          = f.text_field :username, autofocus: true, class: "form-control"
        .field
          Contrase;a
          %br/
          = f.password_field :password, autocomplete: "off", class: "form-control"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            Recordarme
        .actions
          = f.submit "Log in", class: "btn btn-success"
